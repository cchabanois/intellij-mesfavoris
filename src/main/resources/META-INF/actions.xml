<idea-plugin>
    <actions>
        <action id="mesfavoris.actions.AddBookmarkAction" class="mesfavoris.internal.actions.AddBookmarkAction"
                text="Add Favori" description="Add a Bookmark">
            <keyboard-shortcut keymap="$default" first-keystroke="alt EQUALS"/>
            <add-to-group group-id="EditorGutterPopupMenu" anchor="first"/>
        </action>
        <action id="mesfavoris.actions.ShowBookmarksAction"
                class="mesfavoris.internal.actions.ShowBookmarksAction"
                text="Show Bookmarks" description="Select bookmark at caret or show Mes Favoris tool window">
            <keyboard-shortcut keymap="$default" first-keystroke="shift alt EQUALS"/>
        </action>
        <action id="mesfavoris.actions.SwapBookmarkShortcutsAction"
                class="mesfavoris.internal.actions.SwapBookmarkShortcutsAction"
                text="Swap Shortcuts with IntelliJ Bookmarks"
                description="Exchange keyboard shortcuts between Mes Favoris and IntelliJ bookmark actions">
        </action>
        <action id="mesfavoris.actions.SelectBookmarkAtCaretAction"
                class="mesfavoris.internal.actions.SelectBookmarkAtCaretAction"
                text="Select Bookmark at Caret" description="Select the bookmark corresponding to the current caret position"/>
        <action id="mesfavoris.actions.GotoBookmarkAction"
                class="mesfavoris.internal.actions.GotoBookmarkAction" text="Goto Favori" description="Goto Bookmark"/>
        <action id="mesfavoris.actions.ManagePlaceholdersAction"
                class="mesfavoris.internal.actions.ManagePlaceholdersAction" text="Manage Placeholders" description="Manage path placeholders with usage statistics"/>
        <group id="mesfavoris.PopupMenu" text="Tree Popup" popup="true">
            <action id="mesfavoris.actions.OpenAllSelectedBookmarksAction"
                    class="mesfavoris.internal.actions.OpenAllSelectedBookmarksAction" text="Open All" description="Open all selected bookmarks"/>
            <action id="mesfavoris.actions.DeleteBookmarkAction" class="mesfavoris.internal.actions.DeleteBookmarkAction" text="Delete" description="Delete selected bookmarks">
                <keyboard-shortcut first-keystroke="DELETE" keymap="$default"/>
                <keyboard-shortcut first-keystroke="BACK_SPACE" keymap="$default"/>
            </action>
            <action id="mesfavoris.actions.DeleteSharedBookmarkFolderAction" class="mesfavoris.internal.actions.DeleteSharedBookmarkFolderAction" text="Delete" description="Delete selected shared bookmark folder">
                <keyboard-shortcut first-keystroke="DELETE" keymap="$default"/>
                <keyboard-shortcut first-keystroke="BACK_SPACE" keymap="$default"/>
            </action>
            <action id="mesfavoris.actions.DeleteBookmarkMarkerAction" class="mesfavoris.internal.actions.DeleteBookmarkMarkerAction" text="Delete Markers" description="Delete markers for selected bookmarks">
            </action>
            <action id="mesfavoris.actions.NewBookmarkFolderAction" class="mesfavoris.internal.actions.NewBookmarkFolderAction" text="New Bookmark Folder" description="Create a new Bookmark Folder">
            </action>
            <action id="mesfavoris.actions.RenameBookmarkAction"  class="mesfavoris.internal.actions.RenameBookmarkAction" text="Rename" description="Rename Bookmark">
            </action>
            <action id="mesfavoris.actions.SortByNameAction" class="mesfavoris.internal.actions.SortByNameAction" text="Sort by Name" description="Sort bookmarks by name">
            </action>
            <action id="mesfavoris.actions.CopyBookmarkAction"  class="mesfavoris.internal.actions.CopyBookmarkAction" text="Copy" description="Copy" icon="AllIcons.Actions.Copy">
                <keyboard-shortcut keymap="$default" first-keystroke="control C"/>
                <keyboard-shortcut keymap="Mac OS X 10.5+" first-keystroke="meta C"/>
            </action>
            <action id="mesfavoris.actions.CutBookmarkAction"  class="mesfavoris.internal.actions.CutBookmarkAction" text="Cut" description="Cut" icon="AllIcons.Actions.Menu_cut">
                <keyboard-shortcut keymap="$default" first-keystroke="control X"/>
                <keyboard-shortcut keymap="Mac OS X 10.5+" first-keystroke="meta X"/>
            </action>
            <action id="mesfavoris.actions.PasteBookmarkAction"  class="mesfavoris.internal.actions.PasteBookmarkAction" text="Paste" description="Paste" icon="AllIcons.Actions.MenuPaste">
                <keyboard-shortcut keymap="$default" first-keystroke="control V"/>
                <keyboard-shortcut keymap="Mac OS X 10.5+" first-keystroke="meta V"/>
            </action>
            <group id="mesfavoris.CopyPasteSpecial" text="Copy/Paste Special" description="Copy/Paste Special" popup="true">
                <action id="mesfavoris.actions.PasteAsSnippetAction" class="mesfavoris.snippets.internal.actions.PasteAsSnippetAction" text="Paste As Snippet" description="Paste clipboard content as a snippet bookmark">
                </action>
            </group>
        </group>
    </actions>
</idea-plugin>