<idea-plugin>
    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="mesfavoris" secondary="true" icon="mesfavoris.icons.MesFavorisIcons.toolWindowMesFavoris" anchor="right"
                    factoryClass="mesfavoris.internal.toolwindow.MesFavorisToolWindowFactory"/>
        <postStartupActivity implementation="mesfavoris.internal.markers.highlighters.BookmarksHighlighters$BookmarksHighlightersStartupActivity"/>
        <postStartupActivity implementation="mesfavoris.internal.actions.RemoteBookmarksStoreActionsRegistrar"/>
        <postStartupActivity implementation="mesfavoris.gdrive.mappings.BookmarkMappingsStore$Initializer"/>
        <searchEverywhereContributor implementation="mesfavoris.internal.search.BookmarksSearchEverywhereContributor$Factory"/>
        <notificationGroup
                id="com.cchabanois.mesfavoris.errors"
                displayType="STICKY_BALLOON"
                isLogByDefault="true"
        />
        <notificationGroup
                id="com.cchabanois.mesfavoris.info"
                displayType="BALLOON"
                isLogByDefault="false"
        />
        <projectService serviceInterface="mesfavoris.service.IBookmarksService"
                        serviceImplementation="mesfavoris.internal.service.BookmarksService"/>
        <projectService serviceImplementation="mesfavoris.internal.markers.BookmarksMarkersStore"/>
        <projectService serviceImplementation="mesfavoris.internal.toolwindow.BookmarksTreeComponentStateService"/>
        <projectService serviceImplementation="mesfavoris.internal.toolwindow.search.BookmarksSearchHistoryStore"/>
        <projectService serviceImplementation="mesfavoris.gdrive.connection.GDriveUserInfoStore"/>
        <projectService serviceImplementation="mesfavoris.gdrive.connection.GoogleOAuthClientConfigStore"/>
        <projectService serviceInterface="mesfavoris.markers.IBookmarksHighlighters"
                        serviceImplementation="mesfavoris.internal.markers.highlighters.BookmarksHighlighters"/>
        <applicationService serviceImplementation="mesfavoris.internal.settings.placeholders.PathPlaceholdersStore"/>
        <applicationService serviceImplementation="mesfavoris.internal.settings.bookmarktypes.BookmarkTypesStore"/>
        <applicationConfigurable parentId="tools" instance="mesfavoris.internal.settings.MesFavorisConfigurable"
                                 id="mesfavoris.settings" displayName="Mes Favoris"/>
        <applicationConfigurable parentId="mesfavoris.settings" instance="mesfavoris.internal.settings.placeholders.PlaceholdersConfigurable"
                                 id="mesfavoris.settings.placeholders" displayName="Placeholders"/>
        <applicationConfigurable parentId="mesfavoris.settings" instance="mesfavoris.internal.settings.bookmarktypes.BookmarkTypesConfigurable"
                                 id="mesfavoris.settings.bookmarktypes" displayName="Bookmark Types"/>
        <projectConfigurable parentId="mesfavoris.settings" instance="mesfavoris.gdrive.settings.GoogleDriveConfigurable"
                             id="mesfavoris.settings.googledrive" displayName="Google Drive"/>
        <!-- Bookmark comment inlay hints for all languages -->
        <codeInsight.inlayProviderFactory implementation="mesfavoris.internal.markers.inlay.BookmarkCommentInlayHintsProviderFactory"/>

        <!-- Color scheme definitions for bookmark comments -->
        <additionalTextAttributes scheme="Default" file="colorSchemes/BookmarkCommentDefault.xml"/>
        <additionalTextAttributes scheme="Darcula" file="colorSchemes/BookmarkCommentDarcula.xml"/>
    </extensions>

    <!-- Built-in Bookmark Types -->
    <extensions defaultExtensionNs="com.cchabanois.mesfavoris">
        <!-- default -->
        <bookmarkType implementation="mesfavoris.internal.extensions.DefaultBookmarkTypeExtension"/>

        <!-- Text Editor Bookmark Type -->
        <bookmarkType implementation="mesfavoris.texteditor.internal.TextEditorBookmarkTypeExtension"/>

        <!-- Java Bookmark Type -->
        <bookmarkType implementation="mesfavoris.java.internal.JavaBookmarkTypeExtension"/>

        <!-- URL Bookmark Type -->
        <bookmarkType implementation="mesfavoris.url.internal.UrlBookmarkTypeExtension"/>

        <!-- Snippet Bookmark Type -->
        <bookmarkType implementation="mesfavoris.snippets.internal.SnippetBookmarkTypeExtension"/>

        <!-- GDrive Bookmark Type -->
        <bookmarkType implementation="mesfavoris.gdrive.GDriveBookmarkTypeExtension"/>

        <!-- Remote Bookmarks Stores -->
        <remoteBookmarksStore implementation="mesfavoris.gdrive.GDriveRemoteBookmarksStoreExtension"/>
    </extensions>
</idea-plugin>